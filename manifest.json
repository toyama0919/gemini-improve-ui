{
  "manifest_version": 3,
  "name": "Gemini Chat UI Improvements",
  "version": "3.0",
  "description": "Gemini Chat UI improvements with keyboard shortcuts",
  "author": "toyama0919",
  "permissions": ["storage"],
  "host_permissions": [
    "https://gemini.google.com/*"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/app*",
        "https://gemini.google.com/search*"
      ],
      "js": [
        "src/settings.js",
        "src/search.js",
        "src/history.js",
        "src/chat.js",
        "src/keyboard.js",
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
