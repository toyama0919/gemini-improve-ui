{
  "manifest_version": 3,
  "name": "Gemini Chat UI Improvements",
  "description": "Gemini Chat UI improvements with keyboard shortcuts",
  "version": "3.1",
  "author": "toyama0919",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://www.google.co.jp/*",
    "https://gemini.google.com/app*",
    "https://gemini.google.com/search*",
    "http://localhost/*"
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}